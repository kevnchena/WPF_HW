        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="631" Width="845">
    <Grid Height="606" VerticalAlignment="Top" Margin="0,10,0,0">
        <StackPanel Margin="30,53,242,509" Orientation="Horizontal">
            <Label x:Name="Side1" Content=" 邊1:" Width="56" Height="35" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
