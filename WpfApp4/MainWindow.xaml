            <Label Content="邊3 :" Width="56" Height="35" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
            <TextBox x:Name="textbox3" Width="120" TextChanged="TextBox_TextChanged" FontSize="16" FontWeight="Bold" FontFamily="Calibri" Height="23"/>
        </StackPanel>
        <Button x:Name="botton" Content="計算" Margin="661,53,82,509" Click="Botton_Click" />
