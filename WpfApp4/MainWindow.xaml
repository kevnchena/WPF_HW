        <TextBlock x:Name="textblock" HorizontalAlignment="Center" Margin="0,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="374" Width="680" Background="#FFF4F5E6" FontSize="16" FontFamily="Cascadia Code"/>
        <Button x:Name="Allesult" Content="查看所有結果" HorizontalAlignment="Left" Margin="661,123,0,0" VerticalAlignment="Top" Height="42" Width="102" Click="result_botton"/>
    </Grid>
</Window>
